const API_KEY = "11e08d14d64b8d0e2a6fa97b22c2b6cc3bca8b6ffec67b3d23a052001b09b4c1";

const params = new URLSearchParams({
  customer_id: `shopify-${customerID}`,
  mobile: mobile,
  country: "ind",
  amount: cart_amount,
  wallet_type: "credits",
});

const requestOptions = {
  method: "GET",
