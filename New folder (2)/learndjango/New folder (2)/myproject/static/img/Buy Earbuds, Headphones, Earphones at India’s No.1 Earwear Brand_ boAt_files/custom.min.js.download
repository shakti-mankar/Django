

function dispatch_cartUpdate(e) {
  fetch(`${window.themeVariables.routes.cartUrl}.js`).then((async e => {
    let t = await e.json();
    document.documentElement.dispatchEvent(new CustomEvent("cart:updated", {
      bubbles: !0,
      detail: {
        cart: t
      }
    }))
  }));
}

